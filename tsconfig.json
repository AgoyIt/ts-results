{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "moduleResolution": "node",
    "module": "umd",
    "noEmitHelpers": false,
    "skipLibCheck": true,
    "lib": ["es2015"],
    "strict": true,
    "noImplicitReturns": true,
    "baseUrl": "./",
    "target": "es6",
    "importHelpers": true,
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "./dist", "**/*.spec.ts"]
}
