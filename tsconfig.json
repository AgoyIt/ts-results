{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "node",
    "module": "es2015",
    "noEmitHelpers": false,
    "skipLibCheck": true,
    "lib": ["es2015"],
    "strict": true,
    "noImplicitReturns": true,
    "baseUrl": "./",
    "target": "es6",
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "./dist",
    "**/*.spec.ts"
  ]
}
